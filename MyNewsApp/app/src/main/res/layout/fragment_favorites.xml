<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritesFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fav"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_margin="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B1BCC3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_favorites"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Favorites"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|start"
            android:layout_marginStart="30sp"
            android:textColor="@color/teal_700"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_fav"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:text="To History"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:switchPadding="4dp"
            android:checked="false"
            app:thumbTint="@drawable/select_switch_thumb"
            app:trackTint="@drawable/select_switch_track"
            app:useMaterialThemeColors="true"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>



</LinearLayout>